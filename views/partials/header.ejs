<header class="header">
    <div class="headerInner">
        <a href="/" class="headerBrand">
            <div class="logo">
                <img src="/icon.png" alt="upload icon">
            </div>
            <div class="headerText">
                <h1>File Uploader</h1>
                <p>An old school file upload site</p>
            </div>
        </a>
        <div class="headerRight">
            <% if (!isAuthenticated) { %>
                <a href="/login" class="headerLink">Login</a>
                <a href="/signup" class="headerLink">Signup</a>
            <% } else { %>
                <a href="/upload" class="headerLink">Upload</a>
                <a href="/signout" class="headerLink headerLinkDanger">Sign out</a>
            <% } %>
        </div>
    </div>
</header>