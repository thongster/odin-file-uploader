<header class="header">
    <div class="headerInner">
        <a href="/" class="headerBrand">
            <div class="logo">
                <img src="/icon.png" alt="upload icon">
            </div>
            <div class="headerText">
                <h1>File Uploader</h1>
                <p>An old school file upload site</p>
            </div>
        </a>
        <div class="headerRight">
            <% if (!isAuthenticated) { %>
                <h2><a href="/login">Login</a></h2>
                <h2><a href="/signup">Signup</a></h2>
            <% } else { %>
                <h2><a href="/upload">Upload</a></h2>
                <button id="openCreateFolder">New Folder</button>
            <% } %>
        </div>
    </div>
</header>