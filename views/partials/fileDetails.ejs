<div class="detailModal">
  <div class="detailWindow">

    <div class="titleBar">
      <span class="titleText"><%= file.title %> Properties</span>
      <button class="closeButton closeAction">Ã—</button>
    </div>

    <div class="detailContent">

      <div class="detailRow">
        <span class="label">Type:</span>
        <span class="value"><%= file.mimeType %></span>
      </div>

      <div class="detailRow">
        <span class="label">Size:</span>
        <span class="value"><%= Math.round(file.size / 1024) %> KB</span>
      </div>

      <div class="detailRow">
        <span class="label">Location:</span>
        <span class="value"><%= file.folder ? file.folder.name : 'Root' %></span>
      </div>

      <div class="detailRow">
        <span class="label">Created:</span>
        <span class="value"><%= file.createdAt.toLocaleString() %></span>
      </div>

    <div class="detailRow">
        <span class="label">Uploader:</span>
        <span class="value"><%= file.uploader.name ? file.uploader.name : file.uploader.email %></span>
    </div>

    </div>

    <div class="detailFooter">
      <button class="closeAction">OK</button>
    </div>

  </div>
</div>
